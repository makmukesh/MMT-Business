<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:orientation="vertical"
    tools:context=".ProductDetail_Activity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="false"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/color_eeeeee"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/hot_product_bg_round_rectangle"
                        android:minHeight="100dp"
                        android:padding="0.5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:minHeight="100dp"
                        android:padding="0.5dp"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:minHeight="100dp"
                        android:padding="0.5dp"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:minHeight="100dp"
                        android:padding="0.5dp"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/img_5"
                        android:layout_width="55dp"
                        android:layout_height="70dp"
                        android:layout_margin="2dp"
                        android:minHeight="100dp"
                        android:padding="0.5dp"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_big"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:id="@+id/txt_productDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_margin="5dp"
                            android:background="@drawable/bg_round_rectangle_orange"
                            android:fontFamily="@font/gisha_0"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:visibility="gone"
                            tools:ignore="Deprecated" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_productName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:text="Product Name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_productSKU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:text="SKU CODE"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="16sp"

                        android:visibility="visible"
                        tools:ignore="Deprecated" />
                    <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_ShoppingWalletPer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:text="Shopping Wallet Deduction 0 %"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp"

                        android:visibility="visible"
                        tools:ignore="Deprecated" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <TextView android:fontFamily="@font/gisha_0"
                            android:id="@+id/txt_productAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:singleLine="true"
                            android:text="Amount"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#999999"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="Deprecated" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp"
                android:visibility="visible">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/txt_productdetail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_action_up"
                    android:fontFamily="@font/gisha_0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Product Description"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    tools:ignore="Deprecated,HardcodedText" />

                <WebView
                    android:id="@+id/webView_productdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbarSize="1dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    android:visibility="visible" />

                <TextView android:fontFamily="@font/gisha_0"
                    android:id="@+id/txt_deliveryreturninfo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_action_up"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Delivery &amp; Return Information"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_666666"
                    android:visibility="gone"
                    tools:ignore="Deprecated,HardcodedText" />

                <WebView
                    android:id="@+id/webView_view_deliveryreturninfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbarSize="1dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    android:visibility="gone" />

                <TextView android:fontFamily="@font/gisha_0"
                    android:id="@+id/txt_washcareinfo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_action_up"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Wash care instruction"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_666666"
                    android:visibility="gone"
                    tools:ignore="Deprecated,HardcodedText" />

                <WebView
                    android:id="@+id/webView_washcarinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbarSize="1dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_addtowishlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/gisha_0"
                android:text="Add to Cart"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_buyNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@color/color__bg_orange"
                android:fontFamily="@font/gisha_0"
                android:text="Buy Now"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color__bg_orange"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="0.5dp"
            android:visibility="gone">

            <TextView android:fontFamily="@font/gisha_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Availability"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView android:fontFamily="@font/gisha_0"
                android:id="@+id/txt_outofstock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="This item is Out of Stock."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_green_text"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>